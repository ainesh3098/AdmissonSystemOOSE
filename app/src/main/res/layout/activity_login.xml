<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/FullscreenTheme"
    tools:context=".LoginActivity"
    android:background="@drawable/jet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="45dp"
        android:clipChildren="false"
        android:textColorHint="#BDBDBD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signinView">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/emailLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"
            android:translationY="4dp"
            android:background="@drawable/transparent_bg"
            android:ems="10"
            android:textColorHint="#9e9e9e"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/productsans"
            android:hint="Email"
            android:inputType="textPersonName"
            tools:ignore="RtlHardcoded" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:clipChildren="false"
        android:layout_marginTop="30dp"
        android:textColorHint="#BDBDBD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
        app:passwordToggleEnabled="true"
        app:passwordToggleContentDescription="View Password"
        app:passwordToggleTint="#ffffff">


        <android.support.design.widget.TextInputEditText
            android:id="@+id/passwordLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/usernametextView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:ems="10"
            android:hint="Password"
            android:background="@drawable/transparent_bg"
            android:fontFamily="@font/productsans"
            android:paddingBottom="4dp"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textColorHint="#9e9e9e"
            tools:ignore="RtlHardcoded"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:translationY="3dp"
            tools:layout_editor_absoluteY="196dp" />

    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/signinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/productsansbold"
        android:text="Login"
        android:textColor="#fafafa"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/registerTextView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:alpha="0.8"
        android:layout_marginBottom="8dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:background="@drawable/white_bg"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:fontFamily="@font/productsansbold"
        android:text="New Candidate? REGISTER."
        android:textColor="#0D47A1"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnSignIn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="20dp"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:theme="@style/ThemeOverlay.AppCompat"
        app:backgroundTint="#fafafa"
        app:elevation="10dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.631" />



</android.support.constraint.ConstraintLayout>