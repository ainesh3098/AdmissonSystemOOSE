<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    tools:context=".SignUpActivity"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/skyliney"
        app:layout_constraintBottom_toTopOf="@+id/RegisterCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/productsansbold"
        android:text="Want to apply for DTU?"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="226dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/candidateNameEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/transparent_bg"
                android:fontFamily="@font/productsans"
                android:hint="Candidate Name"
                android:paddingStart="8dp"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:textSize="17dp"
                android:translationY="2dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:clipChildren="false"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="140dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/candidateEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/transparent_bg"
                android:fontFamily="@font/productsans"
                android:hint="Candidate Email"
                android:inputType="text"
                android:maxLength="40"
                android:paddingStart="8dp"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:textSize="17dp"
                android:translationY="2dp" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="24dp"
                android:clipChildren="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/candidateRoll"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/transparent_bg"
                    android:fontFamily="@font/productsans"
                    android:hint="Roll Number"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingStart="8dp"
                    android:textColor="#212121"
                    android:textColorHint="#616161"
                    android:textSize="17dp"
                    android:translationY="2dp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:clipChildren="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/candidateRank"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/transparent_bg"
                    android:fontFamily="@font/productsans"
                    android:hint="JEE Rank"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingStart="8dp"
                    android:textColor="#212121"
                    android:textColorHint="#616161"
                    android:textSize="17dp"
                    android:translationY="2dp" />

            </android.support.design.widget.TextInputLayout>




        </LinearLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:clipChildren="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/transparent_bg"
                android:fontFamily="@font/productsans"
                android:hint="Choose a Password"
                android:paddingStart="8dp"
                android:maxLength="10"
                android:textColor="#212121"
                android:textColorHint="#616161"
                android:textSize="17dp"
                android:translationY="2dp" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:clipChildren="false"
                app:layout_constraintBottom_toTopOf="@+id/RegisterCard">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/passwordConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/transparent_bg"
                    android:fontFamily="@font/productsans"
                    android:hint="Confirm Password"
                    android:inputType="text"
                    android:maxLength="10"
                    android:paddingStart="8dp"
                    android:textColor="#212121"
                    android:textColorHint="#616161"
                    android:textSize="17dp"
                    android:translationY="2dp" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/RegisterCard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="#2d577b"
        app:cardElevation="100dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandbold"
            android:text="REGISTER"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="517dp" />

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>